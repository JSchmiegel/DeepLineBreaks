{

    "manifest_version": 2,
    "name": "DeepLineBreaks",
    "version": "1.0",
  
    "description": "Adds button to delete line breaks in the textarea of DeepL.",
  
    "icons": {
      "16": "icons/logo16.png",
      "48": "icons/logo48.png",
      "128": "icons/logo128.png",
      "256": "icons/logo256.png",
      "512": "icons/logo512.png"
    },
  
    "content_scripts": [
      {
        "matches": ["*://*.deepl.com/*"],
        "js": ["deeplinebreaks.js"]
      }
    ]
  
  }